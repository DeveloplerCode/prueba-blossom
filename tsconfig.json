{
  "compilerOptions": {
    // Especifica la versi贸n de ECMAScript de salida para el c贸digo compilado (e.g., ES2020 para caracter铆sticas modernas).
    "target": "ES2020", 
    
    // Especifica el sistema de m贸dulos que se debe usar en el c贸digo compilado (e.g., 'commonjs' para Node.js).
    "module": "commonjs",
    
    // Define el directorio de salida donde se colocar谩n los archivos JavaScript compilados.
    "outDir": "dist",
    
    // Define el directorio ra铆z que contiene los archivos fuente de TypeScript (.ts).
    "rootDir": "src",
    
    // Permite la interoperabilidad con m贸dulos CommonJS para importaciones por defecto (import * as X from "mod" se convierte en import X from "mod").
    "esModuleInterop": true,
    
    // Habilita un amplio conjunto de comprobaciones de tipo estrictas (altamente recomendado).
    "strict": true,
    
    // Omite la comprobaci贸n de tipos de los archivos de declaraci贸n (.d.ts) de las bibliotecas importadas.
    "skipLibCheck": true,

    //  1. ESENCIAL: Habilitar la caracter铆stica experimental de decoradores
    "experimentalDecorators": true, 
    
    //  2. NECESARIO: Habilitar la emisi贸n de metadatos de tipos para decoradores
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,

  },
  "include": [
    "src/**/*.ts" // Esto incluye recursivamente todos los archivos .ts dentro de 'src/'
  ]
}