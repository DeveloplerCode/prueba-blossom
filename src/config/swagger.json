
{
  "openapi": "3.0.0",
  "info": {
    "title": "Blossom Character Search API",
    "version": "1.0.0",
    "description": "API REST para búsqueda de personajes, con lógica de caché Redis y Sequelize."
  },
  "servers": [
    {
      "url": "http://localhost:3000/v1/api",
      "description": "Servidor de Desarrollo Local"
    }
  ],
  "paths": {
    "/searches": {
      "get": {
        "summary": "Busca personajes aplicando múltiples filtros.",
        "description": "Permite filtrar personajes por status, species, gender, y name. La respuesta es cachead en Redis.",
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string",
              "enum": ["Alive", "Dead", "unknown"]
            },
            "description": "Filtra por el estado del personaje."
          },
          {
            "in": "query",
            "name": "gender",
            "schema": {
              "type": "string",
              "enum": ["Female", "Male", "Genderless", "unknown"]
            },
            "description": "Filtra por género."
          }
         
        ],
        "responses": {
          "200": {
            "description": "Resultados de la búsqueda exitosos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "results": {
                      "type": "array",
                      "items": {} 
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    }
  }
}